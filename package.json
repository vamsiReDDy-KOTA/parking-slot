{
  "name": "autospace",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "format": "prettier \"{apps,libs}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "npm run format -- --check",
    "format:write": "npm run format -- --write",
    "tsc": "npm run tsc --workspaces",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "validate": "npm run format:write && npm run lint && npm run tsc && npm run build"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "prettier": "^3.5.2"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}